{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/inputs"
  },

  "run": {
    "tstop": 3000.0,
    "dt": 0.1,
    "block_run": false,
    "block_size": 1000.0
  },

  "inputs": {
    "lgn_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "./inputs/spikes.natural_scenes.h5",
      "node_set": "lgn"
    }
  },

  "reports": {
    "membrane_potential": {
      "cells": {"population": "l4"},
      "variable_name": "V_m",
      "module": "multimeter_report",
      "sections": "soma"
    }
  },

  "output": {
    "output_dir": "output",
    "spikes_file": "spikes.h5",
    "log_file": "log.txt",
    "overwrite_output_dir": true,
    "quiet_simulator": true
  },

  "target_simulator":"NEST",

  "network": "config.circuit.json"
}
