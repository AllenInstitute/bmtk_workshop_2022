{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/stimulus",
    "$NETWORK_DIR": "$BASE_DIR/network",
    "$COMPONENT_DIR": "$BASE_DIR/components"
  },

  "target_simulator":"LGNModel",

  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/lgn_nodes.h5",
        "node_types_file": "$NETWORK_DIR/lgn_node_types.csv"
      }
    ]
  },

  "components": {
    "filter_models_dir": "$COMPONENT_DIR/filter_models"
  },

  "run": {
    "tstop": 3000.0,
    "dt": 0.1
  },

  "conditions": {
    "jitter_lowers": 0.75,
    "jitter_uppers": 1.25
  },

  "inputs": {
    "full_field_flash": {
      "input_type": "movie",
      "module": "full_field_flash",
      "row_size": 240,
      "col_size": 120,
      "t_on": 1000.0,
      "t_off": 2000.0,
      "max_intensity": 10.0,
      "frame_rate": 1000.0
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "./inputs",
    "rates_h5": "rates.flash.h5",
    "spikes_file_csv": "spikes.flash.csv",
    "spikes_file": "spikes.flash.h5"
  }
}
