{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
    
  "target_simulator": "NEURON",
    
  "run": {
    "tstop": 3000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
    
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
    
  "output": {
    "log_file": "log.txt",
    "output_dir": "./output",
    "spikes_file": "spikes.h5"
  },
    
  "reports": {
    "membrane_potential": {
      "module": "membrane_report",
      "variable_name": "v",
      "cells": "all",
      "sections": "soma",
      "file_name": "membrane_potential.h5"
    }
  },
    
  "inputs": {  
   	"cclamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "amp": 0.1500,
      "delay": 500.0,
      "duration": 2000.0
    }
  },
  
  "network": "config.circuit.json"
}