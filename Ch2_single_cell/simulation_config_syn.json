{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 3000.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
  "inputs": {
    "exc_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "./inputs/virt_exc_spikes.h5",
      "node_set": "virt_exc"
    },
    "inh_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "./inputs/virt_inh_spikes.h5",
      "node_set": "virt_inh" 
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "./output_syn",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json"
}
